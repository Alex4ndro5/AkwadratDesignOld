@{
    ViewData["Title"] = "Kontakt";
}
<!DOCTYPE html>
<html lang="pl-pl">

<head>
    <title>Studio projektowania wnętrz Akwadrat</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta charset="UTF-8">
    <meta name="description" content="Studio projektowania wnętrz">
    <meta name="keywords" content="Wnętrza, Architekt wnętrz, Studio projektowania, Akwadrat">
    <meta name="author" content="Aleksander Folfas">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/images/icon_akwadrat.png">
</head>
<body>
    <main>
        <section class="contact" id="contact">
            <div class="container">
                <h2>Kontakt</h2>
                <form>
                    <div class="contact-grid">
                        <input type="text" name="name" id="name" placeholder="Imię i nazwisko" class="form-element">
                        <input type="email" name="email" id="email" placeholder="E-mail" class="form-element">
                        <textarea name="message" id="message" placeholder="Wiadomość" class="form-area"></textarea>
                    </div>
                    <div class="align" style="text-align: right;">
                        <input type="submit" value="Wyślij" class="button">
                    </div>
                </form>
            </div>
        </section>
    </main>
    <script src="Scripts/script.js"></script>
</body>
</html>
